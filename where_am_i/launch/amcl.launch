<launch>

  <!-- USER PARAMETERS -->
  <arg name="pkg_name" default="where_am_i"/>
  <arg name="map_yaml_name" default="map.yaml"/>
  <arg name="x_init_value" default="0"/>
  <arg name="y_init_value" default="0"/>

  <!-- Map Server -->
  <arg name="map_file" default="$(find $(arg pkg_name))/maps/$(arg map_yaml_name)"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- AMCL Node -->
  <node name="amcl" pkg="amcl" type="amcl" output="screen">
    <remap from="scan" to="$(arg pkg_name)/laser/scan"/>
    <param name="odom_frame_id" value="odom"/>
    <param name="odom_model_type" value="diff-corrected"/>
    <param name="base_frame_id" value="robot_footprint"/>
    <param name="global_frame_id" value="map"/>

    <!-- Give AMCL a pose estimate but you could also do it in RViz 2D Pose Estimate function -->
    <!-- the values should correspond to your world.launch file -->
    <param name="initial_pose_x" value="$(arg x_init_value)"/>
    <param name="initial_pose_y" value="$(arg y_init_value)"/>
  </node>

  <!-- Move Base -->
  <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">
    <remap from="scan" to="$(arg pkg_name)/laser/scan"/>
    <param name="base_global_planner" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
    
    <!--  When there are plenty of parameters, use the rosparam tag to include config files to set multiple parameters directly -->
    <rosparam file="$(find $(arg pkg_name))/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find $(arg pkg_name))/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find $(arg pkg_name))/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find $(arg pkg_name))/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find $(arg pkg_name))/config/base_local_planner_params.yaml" command="load" />  
  </node>

</launch>