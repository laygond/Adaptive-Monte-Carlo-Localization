<?xml version='1.0'?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

	<!-- Include Plugins -->
	<xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />

	<!--Define materials and constants-->
	<xacro:property name="PI" value="3.14159"/>
	<material name="blue">
		<color rgba="0 0 0.8 1"/>
	</material>
	<material name="white">
		<color rgba="1 1 1 1"/>
	</material>
	<material name="black">
		<color rgba="0 0 0 1"/>
	</material>
	<material name="red">
		<color rgba="1.0 0 0 1.0"/>
	</material>

	<!-- Links -->
	<link name="base_link">
		<visual>
			<geometry>
				<box size="0.16 0.16 0.12"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0 0 0.085"/>
			<material name="white"/>
		</visual>
	</link>

	<link name="lwheel">
		<visual>
			<geometry>
				<cylinder length="0.05" radius="0.15"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0 0 0"/>
			<material name="black"/>
		</visual>
		<inertial>
			<mass value="5" />
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<inertia ixx="0.1" ixy="0" ixz="0"
					iyy="0.1" iyz="0"
					izz="0.1" />
		</inertial>
	</link>

	<link name="rwheel">
		<visual>
			<geometry>
				<cylinder length="0.05" radius="0.15"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0 0 0"/>
			<material name="black"/>
		</visual>
		<inertial>
			<mass value="5" />
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<inertia ixx="0.1" ixy="0" ixz="0"
					iyy="0.1" iyz="0"
					izz="0.1" />
		</inertial>
	</link>


	<link name="fwheel_attach">
		<visual>
			<geometry>
				<cylinder length="0.10" radius="0.023"/>
			</geometry>
			<origin rpy="0 0 0" xyz="-0.08 0 0"/>
			<material name="white"/>
		</visual>
	</link>

	<link name="fwheel">
		<visual>
			<geometry>
				<cylinder length="0.005" radius="0.025"/>
			</geometry>
			<origin rpy="${PI/2} ${PI/2} 0" xyz="-0.08 0 -0.05"/>
			<material name="black"/>
		</visual>
	</link>


	<link name="camera_link">
		<collision>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<!--mesh filename="package://simple_arm/meshes/camera.dae"/-->
				<sphere radius="0.005"/>
			</geometry>
		</collision>
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<!--mesh filename="package://my_robot/meshes/camera.dae"/-->
				<sphere radius="0.05"/>
			</geometry>
			<material name="red"/>
		</visual>
		<inertial>
			<mass value="0.1" />
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<inertia ixx="1e-6" ixy="0" ixz="0"
					iyy="1e-6" iyz="0"
					izz="1e-6" />
		</inertial>
	</link>

	<link name="hokuyo_link">
		<collision>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename = "package://my_robot/meshes/hokuyo.dae"/>
				<box size="0.1 0.1 0.1"/>
			</geometry>
		</collision>
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename = "package://my_robot/meshes/hokuyo.dae"/>
				<box size="0.1 0.1 0.1"/>
			</geometry>
		</visual>
		<inertial>
			<mass value="1e-5" />
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<inertia ixx="1e-6" ixy="0" ixz="0"
					iyy="1e-6" iyz="0"
					izz="1e-6" />
		</inertial>
	</link>


	<!-- Joints -->
	<joint name="base_to_lwheel" type="continuous">
		<parent link="base_link"/>
		<child link="lwheel"/>
		<origin xyz="0 0.115 0.046" rpy="1.5708 0 0"/>
		<axis xyz="0 1 0" rpy="0 0 0"/>
		<limit effort="10000" velocity="1000"/>
		<dynamics damping="1.0" friction="1.0"/>
	</joint>

	<joint name="base_to_rwheel" type="continuos">
		<parent link="base_link"/>
		<child link="rwheel"/>
		<origin xyz="0 -0.115 0.046" rpy="-1.5708 0 0"/>
		<axis xyz="0 1 0" rpy="0 0 0"/>
		<limit effort="10000" velocity="1000"/>
		<dynamics damping="1.0" friction="1.0"/>
	</joint>

	<joint name="base_to_fattach" type="fixed">
		<parent link="base_link"/>
		<child link="fwheel_attach"/>
		<origin xyz="0 0 0" rpy="0 0 0"/>
	</joint>

	<joint name="fattach_to_fwheel" type="fixed">
		<parent link="fwheel_attach"/>
		<child link="fwheel"/>
		<origin xyz="0 0 0" rpy="0 0 0"/>
	</joint>

	<joint name="camera_joint" type="fixed">
		<axis xyz="0 1 0" />
		<origin xyz="0.2 0 0" rpy="0 -${PI/2} 0"/>
		<parent link="base_link"/>
		<child link="camera_link"/>
	</joint>

	<joint name="hokuyo_joint" type="fixed">
		<parent link="base_link"/>
		<child link="hokuyo_link"/>
		<origin xyz="0.15 0 0.1" rpy="0 0 0"/> 
		<axis xyz="0 1 0" />
	</joint>
</robot>